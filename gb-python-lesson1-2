time = int(input('Enter the time in seconds: '))
hours = 'hh'
minutes = 'mm'
seconds = 'ss'

if time // 3600 > 0:
    hours = time // 3600
else: hours = '00'

if time % 3600 > 59:
    minutes = (time % 3600) // 60
else: minutes = '00'

if 0 < (time % 3600) % 60:
    seconds = (time % 3600) % 60
else: seconds = '00'

print(f"{hours}:{minutes}:{seconds}")
